@model List<ST10263027_PROG7311_POE.Models.Product>

@{
    ViewData["Title"] = "Farmer Dashboard";
}

<style>
    .border-right {
        border-right: 1px solid #dee2e6;
    }

    .col-md-6 {
        padding: 20px;
        min-height: 70vh;
    }

    h1 {
        margin-bottom: 30px;
        font-size: 2.5rem;
    }

    footer {
        display: none;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #4CAF50;
        border-color: #4CAF50;
        padding: 12px 30px;
        width: 100%;
        max-width: 300px;
        display: block;
        margin: 0 auto;
    }

        .btn-primary:hover {
            background-color: #45a049;
            border-color: #45a049;
        }

    .card {
        margin-bottom: 30px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        border-radius: 8px;
    }

    .card-header {
        background-color: #f8f9fa;
        padding: 15px 20px;
        border-bottom: 1px solid #dee2e6;
        border-radius: 8px 8px 0 0;
    }

    .card-body {
        padding: 20px;
    }

    .table {
        margin-top: 15px;
    }

        .table th {
            background-color: #f8f9fa;
        }

    .badge {
        font-size: 85%;
        padding: 5px 10px;
        border-radius: 30px;
    }

    .badge-info {
        background-color: #17a2b8;
        color: white;
    }

    .alert {
        margin-bottom: 20px;
        padding: 15px;
        border-radius: 8px;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }

    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
    }
</style>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1>@ViewBag.WelcomeMessage</h1>
        </div>
    </div>

    <div class="row">
        <!-- Left Side - Product Submission -->
        <div class="col-md-6 border-right">
            <div style="max-width: 85%; margin-bottom: 20px;">
                <h2 class="mb-4 text-center">Product Submission</h2>
            </div>
            <div class="card" style="max-width: 85%; margin-left: 0;">
                <div class="card-header">
                    <h4>Product Information Form</h4>
                </div>
                <div class="card-body">
                    <!-- Display success message -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <!-- Display error message -->
                    @if (ViewBag.ProductError != null)
                    {
                        <div class="alert alert-danger">
                            @ViewBag.ProductError
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>
                    }

                    <form asp-action="AddProduct" asp-controller="Farmer" method="post">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label for="ProductName">Product Name</label>
                            <input type="text" class="form-control" id="ProductName" name="ProductName" placeholder="Enter product name" required />
                        </div>

                        <div class="form-group">
                            <label for="ProductCategory">Product Category</label>
                            <select class="form-control" id="ProductCategory" name="ProductCategory" required>
                                <option value="">Select Category</option>
                                <option value="Vegetables">Vegetables</option>
                                <option value="Fruits">Fruits</option>
                                <option value="Dairy">Dairy</option>
                                <option value="Grains">Grains</option>
                                <option value="Livestock">Livestock</option>
                                <option value="Poultry">Poultry</option>
                                <option value="Organic">Organic</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="ProductionDate">Production Date</label>
                            <input type="date" class="form-control" id="ProductionDate" name="ProductionDate" required />
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Submit Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Right Side - My Products -->
        <div class="col-md-6">
            <div style="max-width: 95%; margin-bottom: 20px;">
                <h2 class="mb-4 text-center">My Products</h2>
            </div>

            <div class="card" style="max-width: 95%;">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4>Product List</h4>
                    <span class="badge badge-info">@(Model != null ? Model.Count : 0) Results</span>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Product Name</th>
                                        <th>Category</th>
                                        <th>Production Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td>@product.ProductName</td>
                                            <td>@product.ProductCategory</td>
                                            <td>@product.ProductionDate?.ToString("yyyy-MM-dd")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p>No products submitted yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>